{% extends 'base.html.twig' %}

{% block title %}Mushroom index{% endblock %}

{% block body %}
    <h1>Mushroom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mushroom in mushrooms %}
            <tr>
                <td>{{ mushroom.id }}</td>
                <td>{{ mushroom.name }}</td>
                <td>
                    <a href="{{ path('app_mushroom_show', {'id': mushroom.id}) }}">show</a>
                    <a href="{{ path('app_mushroom_edit', {'id': mushroom.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mushroom_new') }}">Create new</a>
{% endblock %}
