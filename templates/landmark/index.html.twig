{% extends 'base.html.twig' %}

{% block title %}Landmark index{% endblock %}

{% block body %}
    <h1>Landmark index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for landmark in landmarks %}
            <tr>
                <td>{{ landmark.id }}</td>
                <td>{{ landmark.name }}</td>
                <td>{{ landmark.type }}</td>
                <td>
                    <a href="{{ path('app_landmark_show', {'id': landmark.id}) }}">show</a>
                    <a href="{{ path('app_landmark_edit', {'id': landmark.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_landmark_new') }}">Create new</a>
{% endblock %}
